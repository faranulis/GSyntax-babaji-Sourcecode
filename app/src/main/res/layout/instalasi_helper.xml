<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#74b9ff"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="1. Remove [UserCustom DevicesProfile] \n2. Leave Part [BackUp DeviceProfile] \n3. Save \n
\n
*If [BackUp DeviceProfile] Not Show Up, Reset Screen In PubgM 'Graphi'c Menu\n
*This Process Only Once So There Are No Bugs In The Resolution"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="IF NOTHING APPEARS...!\nMaybe your Android uses Android 11 because G SYntax doesn't support A11 yet, but you can use it if you're already rooted, read more on the 'G Syntax Android 11' button on the main page"
            android:textColor="#fff" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/IND"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:background="#FF7776"
            android:onClick="ind"
            android:layout_margin="12px"
            android:text="Indonesia"
            android:textColor="#fff"
            android:textSize="10dp"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/ING"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:background="#FF7776"
            android:onClick="ing"
            android:layout_margin="12px"
            android:text="ENGLISH"
            android:textColor="#fff"
            android:textSize="10dp"
            tools:ignore="OnClick" />
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>
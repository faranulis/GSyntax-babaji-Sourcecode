<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7f7f7"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="HOW TO USE ? WATCH VIDEO ON INSTALLATION"
            android:textColor="#FF6F00" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Thanks To :"
            android:textColor="#333333" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#333333"
            android:layout_height="wrap_content"
            android:text="Faran Ramdan (Dev/Owner)\nNaufal HD (Asisten)\nFery IR (Tester Global Version)/Partner\nRangga Hermaiza (Tester KR Version)/All My Beta Test\nAwan Trik (For Help me)\nAnd All My Subscriber For Support Me"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#333333"
                android:layout_height="wrap_content"
                android:text="Donation : "/>
            <Button
                android:layout_width="wrap_content"
                android:text="Trakteer"
                android:onClick="Trakteer"
                android:id="@+id/trakteer"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="wrap_content"
                android:text="Paypal"
                android:onClick="paypal"
                android:id="@+id/paypal"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="wrap_content"
                android:text="Subscribe YT"
                android:id="@+id/youtube"
                android:onClick="Subscribeyt"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="10dp"
            android:textColor="#333333"
            android:layout_marginBottom="20dp"
            android:text="*Trakteer Support : Gopay, OVO, Dana, LinkAja, Transfer Bank"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="70dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_music24dp"
            android:layout_height="70dp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/sound1"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:background="#70a1ff"
        android:onClick="sound1"
        android:text="Low"
        android:layout_margin="5dp"
        android:textColor="#fff"
        android:textSize="10dp" />

    <Button
        android:id="@+id/sound2"
        android:layout_width="54dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:background="#70a1ff"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="sound2"
        android:text="High"
        android:textColor="#fff"
        android:textSize="10dp" />

    <Button
        android:id="@+id/sound3"
        android:layout_width="54dp"
        android:layout_height="48dp"
        android:background="#70a1ff"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="sound3"
        android:text="Ultra"
        android:layout_margin="5dp"
        android:textColor="#fff"
        android:textSize="10dp" />
</LinearLayout>
        <TextView
            android:id="@+id/textSQ"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textColor="#575757"
            android:layout_height="wrap_content"
            android:text="Sound Quality"/>
    </LinearLayout></LinearLayout>
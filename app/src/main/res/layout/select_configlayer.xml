        <ImageView
            android:layout_marginTop="100dp"
            android:layout_width="70dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/upload_24dp"
            android:layout_height="70dp" />

        <Button
            android:id="@+id/selectraw"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#70a1ff"
            android:layout_margin="9px"
            android:gravity="center"
            android:onClick="selectRaw"
            android:text="Select Folder"
            android:textColor="#fff"
            android:textSize="10dp" />


            <Button
                android:id="@+id/selectsav"
                android:layout_width="187dp"
                android:layout_margin="9px"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="#70a1ff"
                android:onClick="selectSav"
                android:text="Select Config"
                android:padding="12dp"
                android:textColor="#fff"
                android:textSize="10dp" />

            <Button
                android:id="@+id/instan"
                android:onClick="selectInstan"
                android:layout_width="187dp"
                android:layout_margin="9px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FF5722"
                android:padding="12dp"
                android:text="G-Instan"
                android:textColor="#fff"
                android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#313131"
            android:text="*Select Config = Support Config Enjoycjzc, \n Active.sav, Trueaim.sav, Cache.sav, GameUserSettings, Paks, Zip For Unzip\nDefault~.ini, UserEngine.ini, UserGame.ini,UserUT.ini,Updater.ini"
            android:textSize="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="#313131"
            android:text="*Can Select Folder Rawdata, Config, com.tencent.ig/com.pubg.krmobile/com.vng.pubgmobile/com.rekoo.pubgm"
            android:textSize="10dp" />

        <Button
            android:id="@+id/saveid"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:background="#0984e3"
            android:drawableLeft="@drawable/ic_save_black_24dp"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp"
            android:onClick="buttonSave"
            android:paddingLeft="20dp"
            android:paddingRight="40dp"
            android:text="Run Game"
            android:textColor="#fff" />

    </LinearLayout>
    </ScrollView>
</LinearLayout>